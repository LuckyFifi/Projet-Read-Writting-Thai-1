{# src/Rw/CoreBundle/Resources/views/Core/formConsonant.html.twig #}

<h3>Formulaire des leçons : formLesson.html.twig</h3>

<div class="well">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
	
		{# Les erreurs générales du formulaire. #}
		{{ form_errors(form) }}

		<div class="form-group">
			{# Génération du label. #}
			{{ form_label(form.letter, "Consonne thaïe", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}	
			{# Affichage des erreurs pour ce champ précis. #}
			{{ form_errors(form.letter) }}
		
			<div class="col-sm-3">
				{# Génération de l'input. #}
				{{ form_widget(form.letter, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		
		
		<div class="form-group">
			{# Génération du label. #}
			{{ form_label(form.name, "Nom de la consonne", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}	
			{# Affichage des erreurs pour ce champ précis. #}
			{{ form_errors(form.name) }}
		
			<div class="col-sm-3">
				{# Génération de l'input. #}
				{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		
		
		<div class="form-group">
			{# Génération du label. #}
			{{ form_label(form.initial, "Son initial", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}	
			{# Affichage des erreurs pour ce champ précis. #}
			{{ form_errors(form.initial) }}
		
			<div class="col-sm-3">
				{# Génération de l'input. #}
				{{ form_widget(form.initial, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div> 
		
		
		<div class="form-group">
			{# Génération du label. #}
			{{ form_label(form.final, "Son final", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}	
			{# Affichage des erreurs pour ce champ précis. #}
			{{ form_errors(form.final) }}
		
			<div class="col-sm-3">
				{# Génération de l'input. #}
				{{ form_widget(form.final, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		
		{# Génération du label + error + widget pour un champ #}
		
		{# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
		{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

		{# Génération automatique des champs pas encore écrits.
		Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
		et tous les champs cachés (type « hidden »). #}
		{{ form_rest(form) }}

	{# Fermeture de la balise <form> du formulaire HTML #}
	{{ form_end(form) }}
</div>