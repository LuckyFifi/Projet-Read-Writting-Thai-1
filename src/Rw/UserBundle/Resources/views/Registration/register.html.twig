{# src/Rw/UserBundle/Resources/views/Registration/register.html.twig #}

{% extends "RwUserBundle::layout.html.twig" %}

{% block fos_user_content %}
	
<h3>Veuillez entrer vos identifiants de connexion :</h3>

<div class="well">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}
	
		<div class="form-group">
		{# Génération du label. #}
			{{ form_label(form.username, "Votre nom d'utilisateur",{'label_attr': {'class': 'col-sm-3 control-label'}} ) }}
		{# Affichage des erreurs pour ce champ précis. #}
			{{ form_errors(form.username) }}
		{# Génération de l'input. #}
			<div class="col-sm-6">
				{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="form-group">
			{{ form_label(form.email, "Votre email", {'label_attr': {'class': 'col-sm-3 control-label' }} ) }}
			{{ form_errors(form.email) }}
			<div class="col-sm-6">
				{{ form_widget(form.email, {'attr': {'class': 'form-control'}} ) }}
			</div>
		</div>
		<div class="form-group">
			{{ form_label(form.plainPassword.first, "Votre mot de passe", {'label_attr': {'class': 'col-sm-3 control-label' }} ) }}
			{{ form_errors(form.plainPassword.first) }}
			<div class="col-sm-6">
				{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}} ) }}
			</div>
		</div>
		<div class="form-group">
			{{ form_label(form.plainPassword.second, "Confirmez le  mot de passe", {'label_attr': {'class': 'col-sm-3 control-label' }} ) }}
			{{ form_errors(form.plainPassword.second) }}
			<div class="col-sm-6">
				{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}} ) }}
			</div>
		</div>
		
		
		{# Génération du label + error + widget pour un champ #}
		{# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
		{# form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) #}
		<input type="submit" class="btn btn-primary" value="{{ 'Confirmer'|trans({}, 'FOSUserBundle') }}" />
		
		{# Génération automatique des champs pas encore écrits.
		Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
		et tous les champs cachés (type « hidden »). #}
		{{ form_rest(form) }}

	{# Fermeture de la balise <form> du formulaire HTML #}
	{{ form_end(form) }}
	
</div>
{% endblock fos_user_content %}
